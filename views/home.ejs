<!DOCTYPE html>
<html lang="<%= lng %>">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Security-Policy"
        content="default-src 'self'; script-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src 'self' data: https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com;">
    <title>
        <%= t('home.homePageTitle') %> - Vicale ICT
    </title>
    <link rel="shortcut icon" href="#" />
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/home">
                <img src="/images/logo.png" alt="<%= t('navbar.companyLogoAlt') %>"> Vicale ICT
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" id="homeLink" href="/home">
                            <%= t('navbar.home') %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="aboutUsLink" href="/about">
                            <%= t('navbar.aboutUs') %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="servicesLink" href="/services">
                            <%= t('navbar.services') %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contactLink" href="/contact">
                            <%= t('navbar.contact') %>
                        </a>
                    </li>
                    <!-- Language switcher with flag images -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarLang" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <%= t('navbar.language') %>: <span id="activeLang">
                                    <%= lng.toUpperCase() %>
                                </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarLang">
                            <li>
                                <a class="dropdown-item" href="#" data-lang="en">
                                    English <img class="flag-icon" src="images/us.png" alt="English" width="20" height="20"> 
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#" data-lang="sr">
                                    Serbian <img class="flag-icon" src="images/sr.png" alt="Serbian" width="20" height="20">
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container text-center">
            <h1>
                <%= t('home.heroTitle') %>
            </h1>
            <p>
                <%= t('home.heroText') %>
            </p>
            <a href="/contact" class="btn btn-primary">
                <%= t('home.contactButton') %>
            </a>
        </div>
    </section>

    <!-- About Us Section -->
    <section class="about-section">
        <div class="container text-center">
            <h2>
                <%= t('home.aboutUsTitle') %>
            </h2>
            <p>
                <%= t('home.aboutUsText') %>
            </p>
            <a href="/about" class="btn btn-secondary">
                <%= t('home.learnMore') %>
            </a>
        </div>
    </section>

    <!-- Core Services Section -->
    <section class="services-section">
        <div class="container">
            <h2 class="text-center">
                <%= t('home.coreServicesTitle') %>
            </h2>
            <div class="row text-center">
                <!-- Payment Processing -->
                <div class="col-md-4">
                    <div class="card p-4">
                        <div class="icon-section">
                            <i class="bi bi-cpu"></i>
                        </div>
                        <h3>
                            <%= t('home.paymentProcessingTitle') %>
                        </h3>
                        <p>
                            <%= t('home.paymentProcessingText') %>
                        </p>
                    </div>
                </div>
                <!-- Blockchain Solutions -->
                <div class="col-md-4">
                    <div class="card p-4">
                        <div class="icon-section">
                            <i class="bi bi-blockchain"></i>
                        </div>
                        <h3>
                            <%= t('home.blockchainTitle') %>
                        </h3>
                        <p>
                            <%= t('home.blockchainText') %>
                        </p>
                    </div>
                </div>
                <!-- Digital Asset Management -->
                <div class="col-md-4">
                    <div class="card p-4">
                        <div class="icon-section">
                            <i class="bi bi-wallet2"></i>
                        </div>
                        <h3>
                            <%= t('home.digitalAssetManagementTitle') %>
                        </h3>
                        <p>
                            <%= t('home.digitalAssetManagementText') %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="why-choose-us-section text-center">
        <div class="container">
            <h2>
                <%= t('home.whyChooseUsTitle') %>
            </h2>
            <div class="row">
                <div class="col-md-4">
                    <i class="bi bi-check-circle"></i>
                    <h4>
                        <%= t('home.experienceTitle') %>
                    </h4>
                    <p>
                        <%= t('home.experienceText') %>
                    </p>
                </div>
                <div class="col-md-4">
                    <i class="bi bi-gear"></i>
                    <h4>
                        <%= t('home.customizedSolutionsTitle') %>
                    </h4>
                    <p>
                        <%= t('home.customizedSolutionsText') %>
                    </p>
                </div>
                <div class="col-md-4">
                    <i class="bi bi-lightbulb"></i>
                    <h4>
                        <%= t('home.innovativeTechTitle') %>
                    </h4>
                    <p>
                        <%= t('home.innovativeTechText') %>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact CTA Section -->
    <section class="cta-section text-center">
        <div class="container">
            <h2>
                <%= t('home.readyToTransformTitle') %>
            </h2>
            <p>
                <%= t('home.readyToTransformText') %>
            </p>
            <a href="/contact" class="btn btn-primary">
                <%= t('home.contactUsButton') %>
            </a>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <p>
                <%= t('footer.contactEmail') %>: predrag.nikolic@vicaleict.com
            </p>
            <p>
                <%= t('footer.followUsText') %>:
                    <a href="https://www.linkedin.com/company/gcpn-blockchain-fintech/" target="_blank">LinkedIn</a>
            </p>
            <p>&copy; 2024 Vicale ICT</p>
        </div>
    </footer>

    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</body>

</html>