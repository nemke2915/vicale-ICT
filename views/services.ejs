<!DOCTYPE html>
<html lang="<%= lng %>">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src 'self' data: https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com;">
    <title><%= t('services.servicesPageTitle') %> - Vicale ICT</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/services.css"> <!-- Specific Styles for Services -->
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/home">
                <img src="/images/logo.png" alt="<%= t('navbar.companyLogoAlt') %>"> Vicale ICT
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" id="homeLink" href="/home">
                            <%= t('navbar.home') %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="aboutUsLink" href="/about">
                            <%= t('navbar.aboutUs') %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" id="servicesLink" href="/services">
                            <%= t('navbar.services') %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contactLink" href="/contact">
                            <%= t('navbar.contact') %>
                        </a>
                    </li>
                    <!-- Language switcher with flag images -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarLang" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <%= t('navbar.language') %>: <span id="activeLang">
                                    <%= lng.toUpperCase() %>
                                </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarLang">
                            <li>
                                <a class="dropdown-item" href="#" data-lang="en">
                                    English <img class="flag-icon" src="images/us.png" alt="English" width="20" height="20"> 
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#" data-lang="sr">
                                    Serbian <img class="flag-icon" src="images/sr.png" alt="Serbian" width="20" height="20">
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Services Section -->
        <section class="container mt-5">
            <h1 class="text-center mb-5"><%= t('services.title') %></h1>
            <div class="row">
                <!-- Service Card 1: Payment Processing -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 text-center shadow-lg">
                        <div class="card-body">
                            <i class="bi bi-currency-exchange service-icon"></i> <!-- Bootstrap icon for payments -->
                            <h3 class="card-title mt-3"><%= t('services.paymentProcessingTitle') %></h3>
                            <p class="card-text">
                                <%= t('services.paymentProcessingText') %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Service Card 2: Blockchain Solutions -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 text-center shadow-lg">
                        <div class="card-body">
                            <i class="bi bi-blockchain service-icon"></i> <!-- Bootstrap icon for blockchain -->
                            <h3 class="card-title mt-3"><%= t('services.blockchainTitle') %></h3>
                            <p class="card-text">
                                <%= t('services.blockchainText') %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Service Card 3: Digital Asset Management -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 text-center shadow-lg">
                        <div class="card-body">
                            <i class="bi bi-wallet2 service-icon"></i> <!-- Bootstrap icon for digital assets -->
                            <h3 class="card-title mt-3"><%= t('services.digitalAssetManagementTitle') %></h3>
                            <p class="card-text">
                                <%= t('services.digitalAssetManagementText') %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <p><%= t('footer.contactEmail') %>: predrag.nikolic@vicaleict.com</p>
            <p><%= t('footer.followUsText') %>:
                <a href="https://www.linkedin.com/company/gcpn-blockchain-fintech/" target="_blank">LinkedIn</a>
            </p>
            <p>&copy; 2024 Vicale ICT</p>
        </div>
    </footer>

    <script src="/js/main.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>
