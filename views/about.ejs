<!DOCTYPE html>
<html lang="<%= lng %>">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src 'self' data: https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com;">
    <title><%= t('about.aboutPageTitle') %></title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/about.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/home">
                <img src="/images/logo.png" alt="<%= t('navbar.companyLogoAlt') %>"> Vicale ICT
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" id="homeLink" href="/home">
                            <%= t('navbar.home') %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" id="aboutUsLink" href="/about">
                            <%= t('navbar.aboutUs') %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="servicesLink" href="/services">
                            <%= t('navbar.services') %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contactLink" href="/contact">
                            <%= t('navbar.contact') %>
                        </a>
                    </li>
                    <!-- Language switcher with flag images -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarLang" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <%= t('navbar.language') %>: <span id="activeLang">
                                    <%= lng.toUpperCase() %>
                                </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarLang">
                            <li>
                                <a class="dropdown-item" href="#" data-lang="en">
                                    English <img class="flag-icon" src="images/us.png" alt="English" width="20" height="20"> 
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#" data-lang="sr">
                                    Serbian <img class="flag-icon" src="images/sr.png" alt="Serbian" width="20" height="20">
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- About Header -->
    <section class="about-header">
        <div class="container">
            <h1><%= t('about.aboutUsTitle') %></h1>
            <p><%= t('about.aboutUsDescription') %></p>
        </div>
    </section>

    <!-- About Content -->
    <section class="about-content">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="card p-4">
                        <div class="text-center icon-section">
                            <i class="bi bi-lightbulb"></i>
                        </div>
                        <h2><%= t('about.innovativeSolutionsTitle') %></h2>
                        <p>
                            <%= t('about.innovativeSolutionsText') %>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4">
                        <div class="text-center icon-section">
                            <i class="bi bi-people"></i>
                        </div>
                        <h2><%= t('about.expertTeamTitle') %></h2>
                        <p>
                            <%= t('about.expertTeamText') %>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4">
                        <div class="text-center icon-section">
                            <i class="bi bi-trophy"></i>
                        </div>
                        <h2><%= t('about.yearsOfExperienceTitle') %></h2>
                        <p>
                            <%= t('about.yearsOfExperienceText') %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Meet Our Team Section -->
    <section class="team-section">
        <div class="container">
            <h2><%= t('about.meetOurTeam') %></h2>
            <div class="team-member">
                <img src="/images/peki.jpg" alt="<%= t('about.ceoAltText') %>" class="team-photo">
                <div class="team-info">
                    <h3><%= t('about.ceoName') %></h3>
                    <p>
                        <%= t('about.ceoBio') %>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p><%= t('footer.contactEmail') %>: predrag.nikolic@vicaleict.com</p>
            <p><%= t('footer.followUsText') %>:
                <a href="https://www.linkedin.com/company/gcpn-blockchain-fintech/" target="_blank">LinkedIn</a>
            </p>
            <p>&copy; 2024 Vicale ICT</p>
        </div>
    </footer>

    <script src="/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <script src="/js/main.js"></script>
</body>

</html>
